<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:AntiBaldaGame.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="400"
        x:Class="AntiBaldaGame.Views.GameWindow"
        x:DataType="vm:GameWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="Анти-Балда"
        Width="320" Height="512">

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:GameWindowViewModel />
    </Design.DataContext>

    <DockPanel>
        <StackPanel
            DockPanel.Dock="Bottom"
            Orientation="Horizontal"
            HorizontalAlignment="Center"
            Margin="10"
            Height="64"
            Background="DarkOliveGreen">

            <!-- Поле для ввода текста внизу -->
            <TextBlock x:Name="InputSign"
                       DockPanel.Dock="Bottom"
                       Margin="20"
                       HorizontalAlignment="Center"
                       IsVisible="{Binding InputVisible}">
                Введите букву:
            </TextBlock>

            <TextBox x:Name="InputField"
                     DockPanel.Dock="Bottom"
                     Margin="10"
                     Width="10"
                     TextChanged="InputField_OnTextChange"
                     KeyDown="InputField_OnKeyDown"
                     Text="{Binding Path=InputFieldText}"
                     IsVisible="{Binding InputVisible}" />
        </StackPanel>

        <StackPanel
            DockPanel.Dock="Top"
            Orientation="Horizontal"
            HorizontalAlignment="Center"
            Margin="10"
            Spacing="20"
            Height="64">

            <!-- <Border Background="#707040" CornerRadius="5"> -->
                <TextBlock
                    DockPanel.Dock="Bottom"
                    Text="{Binding Round}"
                    FontSize="50"
                    Margin="15">
                </TextBlock>
            <!-- </Border> -->

            <StackPanel Orientation="Vertical">
                <Border Background="#707040" Width="200" CornerRadius="5"
                        Padding="20" Margin="0 0 0 10">
                    <Grid ColumnDefinitions="Auto,*,Auto">
                        <Ellipse Grid.Column="0" Width="30" Height="20" Fill="#808080" />
                        <TextBlock Grid.Column="1" Text="{Binding FirstPlayer.Name}"
                                   VerticalAlignment="Center" Margin="20 0 0 0" FontSize="16"
                                   FontWeight="SemiBold" />
                        <TextBlock Grid.Column="2" Text="{Binding FirstPlayer.Score}"
                                   VerticalAlignment="Center" HorizontalAlignment="Right"
                                   FontSize="16" />
                    </Grid>
                </Border>
                <Border Background="#707040" CornerRadius="5"
                        Padding="20" Margin="0 0 0 10">
                    <Grid ColumnDefinitions="Auto,*,Auto">
                        <Ellipse Grid.Column="0" Width="30" Height="20" Fill="#808080" />
                        <TextBlock Grid.Column="1" Text="{Binding SecondPlayer.Name}"
                                   VerticalAlignment="Center" Margin="20 0 0 0" FontSize="16"
                                   FontWeight="SemiBold" />
                        <TextBlock Grid.Column="2" Text="{Binding SecondPlayer.Score}"
                                   VerticalAlignment="Center" HorizontalAlignment="Right"
                                   FontSize="16" />
                    </Grid>
                </Border>
            </StackPanel>
        </StackPanel>

        <!-- Grid для кнопок 5x5 -->

        <Grid x:Name="ButtonGrid"
              HorizontalAlignment="Center"
              VerticalAlignment="Center"
              Margin="15">
            <!-- Колонки и строки будут добавлены программно -->
        </Grid>


    </DockPanel>
</Window>