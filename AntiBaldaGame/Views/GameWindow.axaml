<Window
    x:Class="AntiBaldaGame.Views.GameWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:AntiBaldaGame.ViewModels"
    Title="Анти-Балда"
    Width="320"
    Height="512"
    d:DesignHeight="400"
    d:DesignWidth="400"
    x:DataType="vm:GameWindowViewModel"
    Icon="/Assets/avalonia-logo.ico"
    mc:Ignorable="d">

    <Design.DataContext>
        <!--
            This only sets the DataContext for the previewer in an IDE,
            to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs)
        -->
        <vm:GameWindowViewModel />
    </Design.DataContext>

    <DockPanel>
        <StackPanel
            Height="64"
            Margin="10"
            HorizontalAlignment="Center"
            Background="DarkOliveGreen"
            DockPanel.Dock="Bottom"
            Orientation="Horizontal">

            <!--  Поле для ввода текста внизу  -->
            <TextBlock
                x:Name="InputSign"
                Margin="20"
                HorizontalAlignment="Center"
                DockPanel.Dock="Bottom"
                IsVisible="{Binding InputVisible}">
                Введите букву:
            </TextBlock>

            <TextBox
                x:Name="InputField"
                Width="10"
                Margin="10"
                DockPanel.Dock="Bottom"
                IsVisible="{Binding InputVisible}"
                KeyDown="InputField_OnKeyDown"
                Text="{Binding Path=InputFieldText}"
                TextChanged="InputField_OnTextChange" />

            <Button
                x:Name="ApplyField"
                Width="200"
                Height="30"
                Margin="10"
                DockPanel.Dock="Top"
                IsVisible="{Binding ApplyVisible}"
                Click="ApplyButton_OnClick">
                Подтвердить слово
            </Button>
        </StackPanel>

        <StackPanel
            Height="64"
            Margin="10"
            HorizontalAlignment="Center"
            DockPanel.Dock="Top"
            Orientation="Horizontal"
            Spacing="20">

            <!-- <Border Background="#707040" CornerRadius="5"> -->
            <TextBlock
                Margin="15"
                DockPanel.Dock="Bottom"
                FontSize="50"
                Text="{Binding Round}" />
            <!-- </Border> -->

            <StackPanel Orientation="Vertical">
                <Border
                    Width="200"
                    Margin="0,0,0,10"
                    Padding="20"
                    Background="{Binding FirstPlayer.Color}"
                    CornerRadius="5">
                    <Grid ColumnDefinitions="Auto,*,Auto">
                        <Ellipse
                            Grid.Column="0"
                            Width="30"
                            Height="20"
                            Fill="#808080" />
                        <TextBlock
                            Grid.Column="1"
                            Margin="20,0,0,0"
                            VerticalAlignment="Center"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Text="{Binding FirstPlayer.Name}" />
                        <TextBlock
                            Grid.Column="2"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            FontSize="16"
                            Text="{Binding FirstPlayer.Score}" />
                    </Grid>
                </Border>
                <Border
                    Margin="0,0,0,10"
                    Padding="20"
                    Background="{Binding SecondPlayer.Color}"
                    CornerRadius="5">
                    <Grid ColumnDefinitions="Auto,*,Auto">
                        <Ellipse
                            Grid.Column="0"
                            Width="30"
                            Height="20"
                            Fill="#808080" />
                        <TextBlock
                            Grid.Column="1"
                            Margin="20,0,0,0"
                            VerticalAlignment="Center"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Text="{Binding SecondPlayer.Name}" />
                        <TextBlock
                            Grid.Column="2"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            FontSize="16"
                            Text="{Binding SecondPlayer.Score}" />
                    </Grid>
                </Border>
            </StackPanel>
        </StackPanel>

        <!--  Grid для кнопок 5x5  -->
        <Grid
            x:Name="ButtonGrid"
            Margin="15"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <!--  Колонки и строки будут добавлены программно  -->
        </Grid>


    </DockPanel>
</Window>
