<Window
    x:Class="AntiBaldaGame.Views.GameWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:AntiBaldaGame.ViewModels"
    Title="–ê–Ω—Ç–∏-–ë–∞–ª–¥–∞"
    Width="640"
    Height="320"
    d:DesignHeight="400"
    d:DesignWidth="400"
    x:DataType="vm:GameWindowViewModel"
    Icon="/Assets/avalonia-logo.ico"
    mc:Ignorable="d">

    <Design.DataContext>
        <vm:GameWindowViewModel />
    </Design.DataContext>

    <DockPanel>
        <DockPanel DockPanel.Dock="Top">
            <Border
                Width="200"
                Height="80"
                Margin="0,0,0,10"
                Padding="10"
                Background="{Binding FirstPlayer.Color}"
                CornerRadius="5"
                DockPanel.Dock="Left">
                <Grid ColumnDefinitions="Auto,*,Auto">
                    <Ellipse
                        Grid.Column="0"
                        Grid.Row="0"
                        Width="30"
                        Height="20"
                        Fill="#808080" />
                    <TextBlock
                        Grid.Column="1"
                        Grid.Row="0"
                        Margin="20,0,0,0"
                        FontSize="16"
                        FontWeight="SemiBold"
                        Text="{Binding FirstPlayer.Name}" />
                    <TextBlock
                        Grid.Row="1"
                        HorizontalAlignment="Right"
                        FontSize="16"
                        Text="{Binding FirstPlayer.Score}" />
                </Grid>
            </Border>
            <Border
                Width="200"
                Height="80"
                Margin="0,0,0,10"
                Padding="10"
                Background="{Binding SecondPlayer.Color}"
                CornerRadius="5"
                DockPanel.Dock="Right">
                <Grid ColumnDefinitions="Auto,*,Auto">
                    <Ellipse
                        Grid.Column="0"
                        Grid.Row="0"
                        Width="30"
                        Height="20"
                        Fill="#808080" />
                    <TextBlock
                        Grid.Column="1"
                        Grid.Row="0"
                        Margin="20,0,0,0"
                        FontSize="16"
                        FontWeight="SemiBold"
                        Text="{Binding SecondPlayer.Name}" />
                    <TextBlock
                        Grid.Row="1"
                        HorizontalAlignment="Right"
                        FontSize="16"
                        Text="{Binding SecondPlayer.Score}" />
                </Grid>
            </Border>


            <!--  Grid –¥–ª—è –∫–Ω–æ–ø–æ–∫ 5x5  -->
            <Grid
                x:Name="ButtonGrid"
                Margin="15"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
                <!--  –ö–æ–ª–æ–Ω–∫–∏ –∏ —Å—Ç—Ä–æ–∫–∏ –±—É–¥—É—Ç –¥–æ–±–∞–≤–ª–µ–Ω—ã –ø—Ä–æ–≥—Ä–∞–º–º–Ω–æ  -->
            </Grid>
        </DockPanel>

        <DockPanel DockPanel.Dock="Bottom">

            <TextBlock
                Margin="15"
                DockPanel.Dock="Left"
                FontSize="50"
                Text="{Binding Round}" />

            <Border
                Width="300"
                Height="64"
                Padding="10"
                HorizontalAlignment="Center"
                Background="DarkOliveGreen">

                <StackPanel
                    Margin="5"
                    Orientation="Horizontal"
                    Spacing="5">

                    <Button
                        x:Name="UndoButton"
                        Width="30"
                        Height="30"
                        Click="UndoButton_OnClick"
                        DockPanel.Dock="Left">
                        üîÑ
                    </Button>
                    <Button
                        x:Name="SkipButton"
                        Width="30"
                        Height="30"
                        Click="SkipButton_OnClick"
                        DockPanel.Dock="Left">
                        ‚û°Ô∏è
                    </Button>

                    <TextBlock
                        x:Name="InputSign"
                        Margin="20"
                        DockPanel.Dock="Left"
                        IsVisible="{Binding InputVisible}">
                        –í–≤–µ–¥–∏—Ç–µ –±—É–∫–≤—É:
                    </TextBlock>

                    <TextBox
                        x:Name="InputField"
                        Width="50"
                        Margin="10"
                        DockPanel.Dock="Left"
                        IsVisible="{Binding InputVisible}"
                        KeyDown="InputField_OnKeyDown"
                        Text="{Binding Path=InputFieldText}"
                        TextChanged="InputField_OnTextChange" />

                    <Button
                        x:Name="ApplyField"
                        Width="200"
                        Height="30"
                        Margin="10"
                        Click="ApplyButton_OnClick"
                        DockPanel.Dock="Left"
                        IsVisible="{Binding ApplyVisible}">
                        –ü–æ–¥—Ç–≤–µ—Ä–¥–∏—Ç—å —Å–ª–æ–≤–æ
                    </Button>
                </StackPanel>
            </Border>

            <!-- <Border Background="#707040" CornerRadius="5"> -->

            <!-- </Border> -->
        </DockPanel>
    </DockPanel>
</Window>
